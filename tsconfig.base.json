{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "es6",
    "module": "esnext",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@atomic-state-canvas/asc-viewer-libs": ["libs/asc-viewer-libs/src/index.ts"],
      "@atomic-state-canvas/components/*": ["apps/asc-viewer/src/components/*"],
      "@atomic-state-canvas/components/ui/*": ["apps/asc-viewer/src/components/ui/*"],
      "@atomic-state-canvas/core": ["dist/libs/core", "libs/core/src/index.ts"],
      "@atomic-state-canvas/core/*": ["libs/core/src/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "replacers": {
      "default": {
        "enabled": false
      },
      "base-url": {
        "enabled": false
      },
      "custom": {
        "enabled": true,
        "fileExtensions": "{js}",
        "file": "./aliasReplacer.js"
      }
    }
  }
}
